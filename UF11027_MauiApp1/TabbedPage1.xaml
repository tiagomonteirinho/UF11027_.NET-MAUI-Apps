<?xml version="1.0" encoding="utf-8" ?>
<!--'TabbedPage': contains a page tab navigation menu and the details of the selected page tab.-->
<TabbedPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
            xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
            x:Class="UF11027_MauiApp1.TabbedPage1"
            Title="TabbedPage1"
            BarBackgroundColor="LightPink"
            BarTextColor="DarkViolet">
    <!--'Selected/UnselectedTabColor': tab icon color.-->

    <ContentPage Title="Tab 1" 
                 BackgroundColor="BlanchedAlmond"
                 IconImageSource="dotnet_bot.svg">
        <Label Text="Page 1"
               FontSize="Large"
               HorizontalTextAlignment="Center"
               VerticalTextAlignment="Center" />
    </ContentPage>
    <ContentPage Title="Tab 2" BackgroundColor="CadetBlue">
        <Label Text="Page 2"
               FontSize="Large"
               HorizontalTextAlignment="Center"
               VerticalTextAlignment="Center" /></ContentPage>
    <ContentPage Title="Tab 3" BackgroundColor="Yellow">
        <Label Text="Page 3"
               FontSize="Large"
               HorizontalTextAlignment="Center"
               VerticalTextAlignment="Center" /></ContentPage>
    <ContentPage Title="Tab 4">
        <Label Text="Page 4"
               FontSize="Large"
               HorizontalTextAlignment="Center"
               VerticalTextAlignment="Center" /></ContentPage>
</TabbedPage>