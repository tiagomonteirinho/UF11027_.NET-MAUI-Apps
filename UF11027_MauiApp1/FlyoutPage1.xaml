<?xml version="1.0" encoding="utf-8" ?>
<!--'FlyoutPage': contains two related pages, one for a page navigation submenu (flyout) and another for the details of the selected page.-->
<FlyoutPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
            xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
            x:Class="UF11027_MauiApp1.FlyoutPage1"
            Title="FlyoutPage1"
            FlyoutLayoutBehavior="Popover">

    <FlyoutPage.Flyout>
        <ContentPage Title="Flyout submenu" BackgroundColor="Aqua" >
            <Label Text="Submenu" 
                   FontSize="Large"
                   HorizontalTextAlignment="Center"
                   VerticalTextAlignment="Center"/>
        </ContentPage>
    </FlyoutPage.Flyout>
    <FlyoutPage.Detail>
        <ContentPage Title="Details" BackgroundColor="Yellow" >
            <Label Text="Details" 
                   FontSize="Large"
                   HorizontalTextAlignment="Center"
                   VerticalTextAlignment="Center"/>
        </ContentPage>
    </FlyoutPage.Detail>
</FlyoutPage>